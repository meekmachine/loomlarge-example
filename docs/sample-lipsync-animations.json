  "viseme_reference": {
    "description": "ARKit VISEME_KEYS array mapping (indices 0-14)",
    "0": "Ah - wide open vowel",
    "1": "W_OO - rounded lips",
    "2": "Oh - medium rounded",
    "3": "EE - lips spread",
    "4": "Er - r-colored vowel",
    "5": "IH - small open",
    "6": "AE - medium open",
    "7": "R - r sound",
    "8": "S_Z - sibilant",
    "9": "Ch_J - affricate",
    "10": "F_V - labiodental",
    "11": "TH - dental",
    "12": "T_L_D_N - alveolar",
    "13": "B_M_P - bilabial",
    "14": "K_G_H_NG - velar/glottal"
  },

